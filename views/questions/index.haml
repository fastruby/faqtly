%h1= t(:faq)

- if @query
  %p{class: "search-string"}= "Relacionadas con <strong>#{@query}</strong>"

- if @questions.empty?
  %h2= t(:no_questions)

  %a{href: '/questions/new'}= t(:'questions.ask')

- @questions.each do |q|

  .row.question
    .span6
      %h3
        %a{ href: "/preguntas/#{q.permalink}"}= q.question
      %p= q.answer
    -if can?
      .span1.small.actions
        %a{ href: "/questions/#{q.permalink}/edit", class: 'btn'}= '<i class="icon-edit"></i> '+t(:edit)
        %form{ action: "/questions/#{q.permalink}", method: 'post'}
          %input{ type: 'hidden', name: '_method', value: 'delete'}
          %button{ type: 'submit', class: 'btn btn-danger' }= '<i class="icon-remove icon-white"></i> '+t(:delete)