%h1= t(:'tags.title')

- if @tags.empty?
  %h2= t(:no_tags)

  %a{href: u('tags/new')}= t(:'tags.add')

- @tags.each do |t|
  .row
    .span6
      %h3
        %a{href: u("tags/#{t.permalink}"), title: t(:'tags.questions', name: t.name)}= t.name
    - if can?
      .span1.small
        %a{ href: u("tags/#{t.permalink}/edit")}= t(:edit)
        %form{ action: u("tags/#{t.permalink}"), method: 'post'}
          %input{ type: 'hidden', name: '_method', value: 'delete'}
          %input{ type: 'submit', value: t(:delete) }
